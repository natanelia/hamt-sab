{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["bun-types"]
  },
  "include": [
    "shared.ts",
    "shared-*.ts",
    "tanstack-db-collection.ts",
    "types.ts",
    "codec.ts",
    "wasm-utils.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*.test.ts",
    "*.as.ts",
    "demo",
    "demo-app",
    "benchmark.ts"
  ]
}
